root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,tsx,xml,yaml,yml,json}]
indent_style = space
indent_size = 2
tab_width = 2

[*.sol]
indent_style = space

[*.md]
indent_style = space

[Makefile]
indent_style = tab

